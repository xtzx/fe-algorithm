# ============================================================================
# 环境变量配置示例
# ============================================================================
# 复制此文件为 .env 并根据需要修改
# cp env.example .env
# ============================================================================

# ----------------------------------------------------------------------------
# 应用配置
# ----------------------------------------------------------------------------
# 应用名称
APP_NAME=scaffold

# 应用环境: development, staging, production
APP_ENV=development

# 调试模式
DEBUG=true

# 日志级别: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# 日志格式: text, json
LOG_FORMAT=text

# ----------------------------------------------------------------------------
# 数据库配置（示例）
# ----------------------------------------------------------------------------
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# DATABASE_POOL_SIZE=5

# ----------------------------------------------------------------------------
# API 配置（示例）
# ----------------------------------------------------------------------------
# API_HOST=0.0.0.0
# API_PORT=8000

# ----------------------------------------------------------------------------
# 密钥配置（示例）
# ----------------------------------------------------------------------------
# SECRET_KEY=your-secret-key-here
